<div class="terminal-page centered flex justify-center px-4 py-12 md:py-16">
  <div class="terminal-window">
    <div class="terminal-header">
      <div class="terminal-controls">
        <div class="terminal-control close"></div>
        <div class="terminal-control minimize"></div>
        <div class="terminal-control maximize"></div>
      </div>
      <div class="terminal-title">oceanheart-passport --auth</div>
    </div>
    
    <div class="terminal-content">
      <div class="terminal-prompt">oceanheart-passport --auth</div>
      <div class="terminal-text mb-6">System authentication status...</div>

      <% content_for :suppress_auth_status, true %>
      <% if current_user %>
        <div class="terminal-success mb-6">
          <div class="terminal-icon terminal-icon--success">âœ“</div>
          Access granted: Welcome back, <%= current_user.email_address %>!
        </div>
        
        <div class="terminal-text mb-6">
          <div class="terminal-text-muted">User ID:</div> <%= current_user.id %>
          <br>
          <div class="terminal-text-muted">Authenticated:</div> <%= current_user.created_at.strftime("%B %d, %Y at %I:%M %p") %>
        </div>
        
        <div class="text-center mb-6">
          <%= link_to "SIGN OUT", 
              sign_out_path, 
              data: { "turbo-method": :delete },
              class: "terminal-button-secondary" %>
        </div>
      <% else %>
        <div class="terminal-text mb-6">
          Please authenticate to access resources.
        </div>
        
        <div class="space-y-3 mb-6">
          <%= link_to "SIGN IN", 
              sign_in_path, 
              class: "terminal-button w-full block text-center" %>
          
          <%= link_to "CREATE ACCOUNT", 
              sign_up_path, 
              class: "terminal-button-secondary w-full block text-center" %>
        </div>
      <% end %>
      
      <div class="terminal-divider"></div>
      <div class="mt-4 terminal-text-muted text-center">
        <span class="terminal-cursor">Phase 2: Hotwire Integration Complete</span>
      </div>
    </div>
  </div>
</div>
