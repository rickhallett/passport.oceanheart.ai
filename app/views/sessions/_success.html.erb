<div class="auth-container" data-controller="auth">
  <div class="terminal-success mb-4">
    Authentication successful! Welcome back, <%= user.email_address %>.
  </div>
  
  <div class="terminal-text mb-4" data-auth-target="status">Connected</div>
  
  <div class="terminal-form">
    <% return_to = params[:returnTo] || session[:return_to] %>
    <% if return_to.present? %>
      <div class="terminal-text mb-4 text-center">
        Redirecting you back to the application...
      </div>
      <script>
        setTimeout(() => {
          window.location.href = '<%= j return_to %>';
        }, 1500);
      </script>
    <% else %>
      <div class="text-center">
        <%= link_to "CONTINUE TO DASHBOARD", 
            user.admin? ? admin_root_path : root_path, 
            class: "terminal-button w-full" %>
      </div>
    <% end %>
    
    <div class="text-center mt-4">
      <%= link_to "SIGN OUT", sign_out_path, 
          data: { "turbo-method": :delete },
          class: "terminal-link" %>
    </div>
  </div>
</div>